<?php

//GET THE PRODUCT INFORMATION
$_product = $this->getProduct(); 

//SET THE MANUFACTURER NAME
$manu_name = ltrim( strtolower( $_product->getAttributeText('manufacturer') ) );

//SET THE MANUFACTURER LOGO LOCATION
$allowed = array('.gif','.jpeg','.jpg','.png');
$logo_src = null;
$manu_logo_element = null;
//CHECK IS MANUFACTURER LOGO IS PRESENT
foreach( $allowed as $filetype ){
	$logo_src = Mage::getBaseDir() . DIRECTORY_SEPARATOR . 'media' . DIRECTORY_SEPARATOR .'manufacturer' . DIRECTORY_SEPARATOR . $manu_name . $filetype;

	if( file_exists( $logo_src ) ){
		$manu_logo_element = '<h2 id="product-page-manu-logo"><a href="/brands/' . str_replace(' ', '-', $manu_name) . '.html" title="Shop ' . ucwords( $manu_name ) . ' on Need Plumbing Supplies"><img src="/media/manufacturer/' . $manu_name . '.png" alt="Find the best ' . ucwords( $manu_name ) . ' on NeedPlumbingSupplies.com"></a></h2>';
	}
}
?>
<div class="product-options-bottom">
	<?php
		echo $manu_logo_element;
		//OUTPUT THE PRICING INFORMATION AND ADD TO CART
    	echo $this->getChildHtml('', true, true);
    ?>
</div>

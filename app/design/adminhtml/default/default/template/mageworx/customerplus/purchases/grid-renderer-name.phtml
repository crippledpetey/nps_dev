<?php if ($_item = $this->getItem()): ?>
    <div><strong><?php echo $_item->getName() ?></strong></div>
    <div><strong><?php echo $this->helper('mageworx_customerplus')->__('SKU') ?>:</strong> <?php echo implode('<br />', Mage::helper('catalog')->splitSku(Mage::helper('mageworx_customerplus')->getSku($_item))); ?></div>

	<?php $_orderOptions = Mage::helper('mageworx_customerplus')->getOrderOptions($_item) ?>
    <?php if ($_orderOptions): ?>
        <dl class="item-options">
        <?php foreach ($_orderOptions as $_option): ?>
            <dt><?php echo $_option['label'] ?></dt>
            <dd>
            <?php if (isset($_option['custom_view']) && $_option['custom_view']): ?>
                <?php echo Mage::helper('mageworx_customerplus')->getCustomizedOptionValue($_option); ?>
            <?php else: ?>
                <?php echo Mage::helper('core/string')->truncate($_option['value'], 55, '', $_remainder);?>
                <?php if ($_remainder):?>
                    ... <span id="<?php echo $_id = 'id' . uniqid()?>"><?php echo $_remainder ?></span>
                    <script type="text/javascript">
                    $('<?php echo $_id ?>').hide();
                    $('<?php echo $_id ?>').up().observe('mouseover', function(){$('<?php echo $_id ?>').show();});
                    $('<?php echo $_id ?>').up().observe('mouseout',  function(){$('<?php echo $_id ?>').hide();});
                    </script>
                <?php endif;?>
            <?php endif;?>
            </dd>
        <?php endforeach; ?>
        </dl>
    <?php endif; ?>
    <?php echo $_item->getDescription() ?>
<?php endif; ?>
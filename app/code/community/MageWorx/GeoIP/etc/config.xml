<config>
    <modules>
        <MageWorx_GeoIP>
            <version>1.1.5</version>
        </MageWorx_GeoIP>
    </modules>

    <admin>
        <routers>
            <mageworx>
                <args>
                    <modules>
                        <MageWorx_GeoIP before="MageWorx_Adminhtml">MageWorx_GeoIP</MageWorx_GeoIP>
                    </modules>
                </args>
            </mageworx>
        </routers>
    </admin>

    <frontend>
        <translate>
            <modules>
                <MageWorx_GeoIP>
                    <files>
                        <default>MageWorx_GeoIP.csv</default>
                    </files>
                </MageWorx_GeoIP>
            </modules>
        </translate>
    </frontend>

    <global>
        <models>
            <mageworx_geoip>
                <class>MageWorx_GeoIP_Model</class>
            </mageworx_geoip>
        </models>
        <blocks>
            <mageworx_geoip>
                <class>MageWorx_GeoIP_Block</class>
            </mageworx_geoip>
        </blocks>
        <helpers>
            <mageworx_geoip>
                <class>MageWorx_GeoIP_Helper</class>
            </mageworx_geoip>
        </helpers>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <mwgeoip>
                    <file>mageworx_geoip.xml</file>
                </mwgeoip>
            </updates>
        </layout>
        <events>
            <model_config_data_save_before>
                <observers>
                    <mwgeoip>
                        <class>mageworx_geoip/observer</class>
                        <method>changeDbTypeAfter</method>
                    </mwgeoip>
                </observers>
            </model_config_data_save_before>
        </events>
    </adminhtml>

    <default>
        <mageworx_geoip>
            <geoip>
                <db_type>1</db_type>
                <db_path>lib/GeoIP/GeoIP.dat</db_path>
            </geoip>
        </mageworx_geoip>
    </default>

    <crontab>
        <jobs>
            <geoip_db_update>
                <schedule><cron_expr>0 0 * * 1</cron_expr></schedule>
                <run><model>mwgeoip/observer::cronUpdateDatabase</model></run>
            </geoip_db_update>
        </jobs>
    </crontab>
</config>
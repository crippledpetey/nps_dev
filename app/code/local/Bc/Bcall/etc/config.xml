<config>
	<modules>
		<Bc_bcall>
			<version>1.1.1</version>
			<title>Biztech</title>
		</Bc_bcall>
	</modules>
	
	<global>
		<models>
			<bcall>
				<class>Bc_Bcall_Model</class>
			</bcall>
		</models>
		<helpers>
			<bcall>
				<class>Bc_Bcall_Helper</class>
			</bcall>
		</helpers>
		<resources>
			<bcall_setup>
				<setup>
					<module>Bc_Bcall</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</bcall_setup>
			<bcall_write>
				<connection>
					<use>core_write</use>
				</connection>
			</bcall_write>
			<bcall_read>
				<connection>
					<use>core_read</use>
				</connection>
			</bcall_read>
		</resources>
		<blocks>
			<bcall>
				<class>Bc_Bcall_Block</class>
			</bcall>
		</blocks>
	</global>

	<adminhtml>
		<translate>
			<modules>
				<Bc_bcall>
					<files>
						<default>Bc_Bcall.csv</default>
					</files>
				</Bc_bcall>
			</modules>
		</translate>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<bcall>
											<title>Biztech</title>
										</bcall>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>
        </events>
        <blocks>
            <vendormanager>
                    <class>NPS_HipChat_Block</class>
            </vendormanager>
        </blocks>
    </global>
    <admin>
        <routers>
            <nps_hipchat>
                <use>admin</use>
                <args>
                    <module>NPS_HipChat</module>
                    <frontName>HipChat</frontName>
                </args>
            </nps_hipchat>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <system>
                <children>
                    <nps_hipchat_menu translate="title" module="hipchat">
                        <title>HipChat</title> 
                        <sort_order>30</sort_order>
                        <action>HipChat/index/index</action>
                    </nps_hipchat_menu>
                </children>
            </system>
        </menu>

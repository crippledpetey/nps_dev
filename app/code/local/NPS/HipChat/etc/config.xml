<?xml version="1.0" ?>
<config>
    <modules>
        <NPS_HipChat>
            <version>0.1.0</version>
        </NPS_HipChat>
    </modules>
    <global>
        <helpers>
            <hipchat>
                <class>NPS_HipChat_Helper</class>
            </hipchat>
        </helpers>
        <events>     
            <catalog_product_save_after>      
                <observers>     
                    <!--<product_Save_Url_Rewrite>     
                        <type>singleton</type>  
                        <class>NPS_CustomAdminFunctions_Model_Observer</class>
                        <method>updateUrlReWrite</method>  
                    </product_Save_Url_Rewrite>-->
